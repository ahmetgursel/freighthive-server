// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: can add model's relations onDelete: Cascade

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  password      String
  name          String
  role          UserRole
  trucks        Truck[] 
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@map("users")
}

model Truck {
  id           String       @id @default(uuid())
  plateNumber  String       @unique
  driverName   String
  driverPhone  String
  capacity     Decimal
  status       TruckStatus
  createdBy    User         @relation(fields: [createdById], references: [id])
  createdById  String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

enum UserRole {
  ADMIN
  DRIVER
}

enum TruckStatus {
  LOADED
  UNLOADED
}
